    plt.xlabel(col1)
    plt.ylabel(col2)
    
    slope, intercept = np.polyfit(df[col1], df[col2], 1)
    
    x_fit = np.linspace(df[col1].min(), df[col1].max(), 100)
    y_fit = slope * x_fit + intercept
    
    plt.plot(x_fit, y_fit, color='red', label='Best Fit Line')
    plt.legend()
